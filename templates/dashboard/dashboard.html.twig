{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-gray-100 flex flex-col items-center justify-center">
        <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-md text-center">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">Bienvenue sur le tableau de bord</h1>

            <div class="space-y-4">
                {% if isAdmin %}
                    <a href="{{ path('admin_dashboard') }}"
                       class="block w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded transition duration-300">
                        Accéder à l'administration
                    </a>
                {% endif %}

                {% if isUser %}
                    <a href="{{ path('user_profile') }}"
                       class="block w-full bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded transition duration-300">
                        Mon profil
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}