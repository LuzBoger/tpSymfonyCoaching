{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-gray-100 flex flex-col items-center justify-center">
        <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-lg">
            <h1 class="text-3xl font-bold text-gray-800 mb-6">Profil de {{ user.name }}</h1>

            <div class="space-y-4">
                <div>
                    <p class="text-gray-600">
                        <span class="font-semibold">Email :</span> {{ user.email }}
                    </p>
                </div>
                <div>
                    <p class="text-gray-600">
                        <span class="font-semibold">Nom d'utilisateur :</span> {{ user.name }}
                    </p>
                </div>
                <div>
                    <p class="text-gray-600 font-semibold">RÃ´les :</p>
                    <ul class="list-disc list-inside text-gray-600">
                        {% for role in user.roles %}
                            <li>{{ role }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="mt-6 text-center">
                <a href="{{ path('app_dashboard') }}"
                   class="inline-block bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded transition duration-300">
                    Retour au tableau de bord
                </a>
            </div>
        </div>
    </div>
{% endblock %}
